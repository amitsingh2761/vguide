
<% layout("/layout/boilerplate") %>
<link rel="stylesheet" href="/stylesheets/profile.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-9 col-xl-7">
          <div class="card">
            <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
              <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                <img src="<%=  user.avatar%>"
                  alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                  style="width: 150px; z-index: 1">
                <button  type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                  style="z-index: 1;">
                 <a href="/userdata" style="text-decoration:none; color:darkgrey;"> Edit profile</a>
                </button>
              </div>
              <div class=" mx-3" style="margin-top: 130px;">
                <h5><%= user.username%> </h5>
                <p><%= user.location%> </p>
              </div>
            </div>
            <div class="p-4 text-black" style="background-color: #f8f9fa;">
              <div class="d-flex justify-content-end text-center py-1">
                <div>
                  <p class="mb-1 h5">253</p>
                  <p class="small text-muted mb-0">Photos</p>
                </div>
                <div class="px-3">
                  <p class="mb-1 h5">1026</p>
                  <p class="small text-muted mb-0">Followers</p>
                </div>
                <div>
                  <p class="mb-1 h5">478</p>
                  <p class="small text-muted mb-0">Following</p>
                </div>
              </div>
            </div>
            <div class="card-body p-4 text-black">
              <div class="mb-5">
                <p class="lead fw-normal mb-1">About</p>
                <div class="p-4" style="background-color: #f8f9fa;">
                  <p class="font-italic mb-1"><%= user.profession %></p>
                  <p class="font-italic mb-1"><%= user.email %> </p>
                  <p class="font-italic mb-0"><%= user.bio %> </p>
                </div>
              </div>
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0">photo uploads</p>
            
              </div>
              <div class="row g-2">
                <% for( let item of places) { %>
                <% let i=0; %> 
          
                <div class="col-6 mb-2" id="uploads">
                  <a href="/place/<%= item._id%>" style="text-decoration: none; color:#000">    <img src="<%= item.images[i].url%>"
                    alt="image 1" class="w-100 rounded-3"></a>
                </div>  <%i++; } %>
               
              </div>
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0">review posts</p>
            
              </div>
              <div class="row g-2">
                <% for( let item of reviews) { %>
           
          
                <div class="col-6 mb-2" id="reviews">
            <a href="/place/<%= item.place%>" style="text-decoration: none; color:#000"> <div class="card text-center">
              <h3 class="display-4 "><%= item.rating  %> rating</h3>
              <div>
                <% for( let i=0;i<item.rating;i++ ) { %>
                  <span class="fa fa-star checked"></span>
                
                <% } %>
             
              </div>
               <p class="card-body"><%= item.body %> </p>
             </div>
            </a> </div>  <% } %>
               
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js">


  </script>