<% layout("/layout/boilerplate") %>




    <h2>add place</h2>












    <form action="/place" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
        <div class="form-group">
            <label for="title"> title:
            </label><input type="text" class="form-control" id="title" name="PLACE[title]" required />
            <div class="valid-feedback">looks good</div>

            <label for="location">location</label>
            <select class="form-control" id="location" name="PLACE[location]" required>
                <% for(let item of city ) { %>
                    <option value="<%= item.name %>">
                        <%= item.name %>
                    </option>
                    <% } %>
            </select>
            <div class="valid-feedback">looks good</div>
            <label for="description"> description

            </label>
            <textarea class="form-control" name="PLACE[description]" id="description" cols="30" rows="10"
                required></textarea>
            <div class="valid-feedback">looks good</div>


            <label for="price">price
            </label><input type="number" id="price" class="form-control" name="PLACE[price]" required />
            <div class="valid-feedback">looks good</div>
            <label for="image">image

            </label>


            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="PLACE[images]" name="PLACE[images]" required
                        multiple>
                    <label class="form-file-label" for="PLACE[images]">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>





            <!-- <input type="file" id="image" class="form-control" name="PLACE[image]" required multiple />
            <div class="valid-feedback">looks good</div> <br> -->

            <!-- <label for="image">image
            </label><input type="url" id="image" class="form-control" name="PLACE[image]" required />
            <div class="valid-feedback">looks good</div> -->
            <button type="submit" class="btn btn-primary form-control">submit</button>
            <h4><a href="http://localhost:3000/place/"> cancel</a></h4>
        </div>
    </form>