<% layout("/layout/boilerplate") %>
    <h1>add hotel</h1>



    <h1>
        <%= city.name %>
    </h1>
    <h2>add hotel</h2>












    <form action="/city/<%=city._id%>/hotels" method="POST" class="form" validate>
        <div class="form-group">
            <label for="title"> title:
            </label><input type="text" class="form-control" id="title" name="HOTEL[title]" required />
            <div class="valid-feedback">looks good</div>
            <!-- <label for="location"> location:
            </label><input type="text" id="location" class="form-control" name="HOTEL[location]"
                value="//will be :city" />
            <div class="valid-feedback">looks good</div> -->


            <label for="description"> description

            </label>
            <textarea class="form-control" name="HOTEL[description]" id="description" cols="30" rows="10"
                required></textarea>
            <div class="valid-feedback">looks good</div>


            <label for="price">price
            </label><input type="number" id="price" class="form-control" name="HOTEL[price]" required />
            <div class="valid-feedback">looks good</div>

            <label for="category">category
            </label><select class="custom-select " name="HOTEL[category]" id="category" multiple >
                <option disabled>select any category</option>
                <option value="bussiness">bussiness</option>
                <option value="midrange">midrange</option>
                <option value="longstay">long stay</option>
    
              </select>
            <div class="valid-feedback">looks good</div>

            <label for="image">image
            </label><input type="url" id="image" class="form-control" name="HOTEL[image]" required />
            <div class="valid-feedback">looks good</div>
            <label for="contact">contact
            </label><input type="url" id="contact" class="form-control" name="HOTEL[contact]" required />
            <div class="valid-feedback">looks good</div>


            <button type="submit" class="btn btn-primary form-control mt-3">submit
            </button>
            <h4><a href="http://localhost:3000/city/<%= city._id %> "> cancel</a></h4>
        </div>
    </form>